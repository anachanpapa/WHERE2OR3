<script>
function result(data){
  //alert("result:" + data);
  var pstr = data.split("$$$");
  var date = pstr[1];
  var country = pstr[2];
  var imgUrl = pstr[3];
  var title = pstr[4];
  var shortDesc = pstr[5]; 
  var longDesc = pstr[6];

  $("#date-country").text(date + " | " + country);  
